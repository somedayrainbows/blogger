<h1>All Tags</h1>

<ul id="tags">
  <% @tag.each do |tag| %>
  <li> <%= link_to tag.name, tag_path(tag), class: 'tag_name', id: "tag_#{tag.id}" %>
  </li>
  <li>
    <%= link_to "delete tag", tag_path(tag), method: :delete, data: { confirm: "Really delete this tag?"} %>
  </li>
  <li>&nbsp;</li>
  <% end %>

</ul>
